/*
  快速排序
  找个数，小于他的放在左边，大于他的放在右边
*/
#include<iostream>
using namespace std;
void sert(int *a, int begin, int end)
{
	int i = begin;
	int j = end;
	if (begin < end)
	{
		int temp = a[i];
		while (i < j)
		{
			while (j > i&&a[j] > temp) j--;
			if (j > i) a[i++] = a[j];//说名a[j]是目标，a[j]=a[i],此时比较目标是a[j--]
			while (i < j&&a[i] < temp)i++;
			if (i < j)a[j--] = a[i]; //同上
		}
		a[i] = temp;
		sert(a, begin, i - 1);
		sert(a, i + 1, end);
	}
}
int main()
{
	int a[] = { 1,2,1,2,11,22,11,2,1 };
	sert(a, 0, 8);
	for (int i = 0; i < 9; i++)
	{
		cout << a[i] << endl;
	}
	int l;
	cin >> l;
	return 0;
}
