/*
选择排序
  先在0-n选择最小的放到a[0]
  再在1-n选择最小的放到a[1]
  */
#include<iostream>
using namespace std;
int main()
{
	int a[] = { 1,2,3,2,1,2,4,1,2 };
	int temp = 0;
	for (int i = 0; i < 9; i++)
	{
		for (int j = i; j < 9; j++)
		{
			if (a[j] < a[i])//如果比要替换位置的数小，则交换位置
			{
				int t = a[j];
				a[j] = a[i];
				a[i] = t;
			}
		}
	}
	for (int i = 0; i < 9; i++)
	{
		cout << a[i];
	}
	cin >> temp;
}
